@model MemeShop.Models.DiscountCode.DiscountMultupleViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Admin/Discount/DiscountCodesPreview.css" rel="stylesheet" />
    @Styles.Render("~/bundels/bootstrap")
    <title>Codes</title>
</head>
<body>
    <div class="top">
        <h3 id="logo">Discount Codes</h3>
        @Html.ActionLink("Admin Pannel", "AdminPanel", null, new { @class = "logoLink" })
    </div>
    <div class="createLinkWrap">
        <button id="btnLink" class="btn btn-light">Hide Form</button>
    </div>
    <div class="container" id="showOnBtnClick">
        <div class="wrap">
            @using (Html.BeginForm("CreateNewCode", "AdminUI", FormMethod.Post))
            {
                <p>Enter Discount Code here:</p>
                <p>@Html.EditorFor(m => m.DiscountCodeVM.Code)</p>
                <p>Enter how much will be the sale(in %):</p>
                <p>@Html.EditorFor(m => m.DiscountCodeVM.DiscountPerCent)</p>
                <input type="submit" value="Create" class="btn btn-success"/>
            }
        </div>
    </div>

    <table class="table">
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Per Cent</th>
            <th></th>
        </tr>
        <tbody>
            @foreach (var item in Model.CodesEnum)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.DiscountPerCent</td>
                    <td>@Html.ActionLink("Delete", "DeleteDiscountCode", new { id = item.Id })</td>
                </tr>
            }
        </tbody>
    </table>


    @Scripts.Render("~/bundels/jsbootstrap")
    <script src="~/Scripts/DiscountCodeScripts.js"></script>    
    
</body>
</html>
