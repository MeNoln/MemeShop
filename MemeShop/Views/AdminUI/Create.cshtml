@model MemeShop.Models.ShopItemViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Admin/CreateProductStyle.css" rel="stylesheet" />
    @Styles.Render("~/bundels/bootstrap")
    <title>Create</title>
</head>
<body>
    <div class="top">
        <h3 id="logo">Create Product</h3>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="wrap">
                    @using (Html.BeginForm("Create", "AdminUI", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <h3>Enter Product name</h3>
                        <p>@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "textInp" } })</p>
                        <h3>Description</h3>
                        <p>@Html.TextAreaFor(model => model.Description, new { @class = "area" })</p>
                        <h3>Price</h3>
                        <p>@Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "textInp" } })</p>
                        <h3>Picture</h3>
                        <p>@Html.TextBox("image", "", new { type = "file" })</p>

                        <input type="submit" value="Create" class="btn btn-success"/>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="backBtn">
            @Html.ActionLink("Back", "AdminPanel")
        </div>
    </div>
</body>
</html>
